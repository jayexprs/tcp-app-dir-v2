---
import StackedCard from "../components/StackedCard.astro";
import data from "../data.json";
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout>
  <forge-scaffold class="scaffold-example">
    <forge-app-bar title-text="App Directory | Tylertown, ME" slot="header">
    </forge-app-bar>
    <div slot="body">
      <main>
        {data.map((product) => <StackedCard product={product} />)}
      </main>

      <script
        type="module"
        src="https://cdn.jsdelivr.net/npm/@tylertech/forge@2.11.0/dist/esm/index.js"
      ></script>
    </div>
  </forge-scaffold>
</SiteLayout>
