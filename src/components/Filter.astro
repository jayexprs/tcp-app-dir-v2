---
import LayoutSwitcher from "./LayoutSwitcher.astro";
import data from "../data.json";
---

<div class="filter">
  <label for="product-apps">Search</label>
  <input
    type="text"
    id="product-apps"
    name="product-apps"
    required
    minlength="4"
    maxlength="8"
    size="10"
  />
  <div>
    <input type="checkbox" id="favorites" name="favorites" />
    <label for="favorites">Favorites</label>
  </div>
  <div>
    <input type="checkbox" id="admin" name="admin" />
    <label for="favorites">Admin</label>
  </div>
  <div>
    <p style="margin-bottom: 6px; font-weight: 500; font-size: 1.1rem">
      Filter by product
    </p>
    {
      data.map((product) => (
        <div>
          <input type="checkbox" id={product.name} name={product.name} />
          <label for={product.name}>{product.name}</label>
        </div>
      ))
    }
  </div>
  <LayoutSwitcher />
</div>
<style>
  .filter {
    height: 800px;
    border: 1px solid #777;
    background-color: rgba(172, 172, 172, 0.7);
    border-radius: 4px;
    display: grid;
    align-content: start;
    gap: 8px;
    padding: 20px;
  }
</style>
